<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(SolutionDir)src\Sakuno.ING.props" />

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <RootNamespace>Sakuno.ING.Localization</RootNamespace>
    <Version>0.1.0-blueprint</Version>
    <Description>Desktop localization service of Intelligent Naval Gun</Description>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="$(SolutionDir)ING.Localization\locales\*.json">
      <Link>Strings\%(Filename)%(Extension)</Link>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="Sakuno.ING.Core.CommonSettings" Version="0.1.0-blueprint" />
  </ItemGroup>

</Project>
