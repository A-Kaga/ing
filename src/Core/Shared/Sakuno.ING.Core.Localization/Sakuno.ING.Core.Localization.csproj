<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Sakuno.ING.Localization</RootNamespace>
    <Version>0.1.0-blueprint</Version>
    <Description>Desktop localization service of Intelligent Naval Gun</Description>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="$(BasePath)Localization\locales\*.json">
      <Link>Strings\%(Filename)%(Extension)</Link>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(BasePath)src\Infrastructure\Sakuno.ING.Core.CommonSettings\Sakuno.ING.Core.CommonSettings.csproj" />
  </ItemGroup>

</Project>
