<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:rc="clr-namespace:Sakuno.KanColle.Amatsukaze.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/HeavenlyWind;component/Styles/Common.xaml" />
        <ResourceDictionary Source="pack://application:,,,/HeavenlyWind;component/Styles/Icons.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type rc:EquipmentIcon}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="CacheMode" Value="{StaticResource BitmapCache}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type rc:EquipmentIcon}">
                    <Viewbox>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">?</TextBlock>
                    </Viewbox>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="Type" Value="None">
                <Setter Property="Visibility" Value="Hidden" />
            </Trigger>

            <Trigger Property="Type" Value="SmallCaliberGun">
                <Setter Property="Template" Value="{StaticResource SmallCaliberGunIcon}" />
            </Trigger>
            <Trigger Property="Type" Value="MediumCaliberGun">
                <Setter Property="Template" Value="{StaticResource MediumCaliberGunIcon}" />
            </Trigger>
            <Trigger Property="Type" Value="LargeCaliberGun">
                <Setter Property="Template" Value="{StaticResource LargeCaliberGunIcon}" />
            </Trigger>
            <Trigger Property="Type" Value="SecondaryGun">
                <Setter Property="Template" Value="{StaticResource SecondaryGunIcon}" />
            </Trigger>
            <Trigger Property="Type" Value="Torpedo">
                <Setter Property="Template" Value="{StaticResource TorpedoIcon}" />
            </Trigger>
            <Trigger Property="Type" Value="CarrierBasedFighter">
                <Setter Property="Template" Value="{StaticResource CarrierBasedFighterIcon}" />
            </Trigger>
            <Trigger Property="Type" Value="CarrierBasedDiveBomber">
                <Setter Property="Template" Value="{StaticResource CarrierBasedDiveBomberIcon}" />
            </Trigger>
            <Trigger Property="Type" Value="CarrierBasedTorpedoBomber">
