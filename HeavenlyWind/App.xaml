<Application x:Class="Sakuno.KanColle.Amatsukaze.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Sakuno.UserInterface;component/Themes/Dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Sakuno.UserInterface;component/Themes/Accents/Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Sakuno.UserInterface;component/Styles/Controls.xaml" />

                <ResourceDictionary Source="pack://application:,,,/HeavenlyWind;component/Styles/Common.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HeavenlyWind;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HeavenlyWind;component/Styles/Converters.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type ScrollViewer}">
                <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
