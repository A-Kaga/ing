<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:rb="clr-namespace:Sakuno.KanColle.Amatsukaze;assembly=HeavenlyWind.Base">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/HeavenlyWind;component/Styles/Icons.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <ToolTip x:Key="UnsuppliedToolTip" x:Shared="False">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Control Style="{StaticResource FuelIcon}" Margin="2" />
            <TextBlock Text="{Binding Fuel}" Margin="4, 2" Grid.Column="1" />

            <Control Style="{StaticResource BulletIcon}" Margin="2" Grid.Row="1" />
            <TextBlock Text="{Binding Bullet}" Margin="4, 2" Grid.Column="1" Grid.Row="1" />

            <Control Style="{StaticResource BauxiteIcon}" Margin="2" Grid.Row="2" />
            <TextBlock Text="{rb:Multiply Plane, 5}" Margin="4, 2" Grid.Column="1" Grid.Row="2" />
        </Grid>
    </ToolTip>

</ResourceDictionary>