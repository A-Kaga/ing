<UserControl x:Class="Sakuno.KanColle.Amatsukaze.Views.Game.SortieOrPractice"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:rvg="clr-namespace:Sakuno.KanColle.Amatsukaze.Views.Game"
             mc:Ignorable="d"
             d:DesignWidth="300" d:DesignHeight="300">
    <Grid>
        <rvg:Sortie Visibility="{Binding IsSortieVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
        <rvg:Practice Visibility="{Binding IsPracticeVisible, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>
