<UserControl x:Class="Sakuno.KanColle.Amatsukaze.Views.Game.Headquarter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:rb="clr-namespace:Sakuno.KanColle.Amatsukaze;assembly=HeavenlyWind.Base"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Border DataContext="{Binding Admiral.Source}" Padding="4" Margin="0, 0, 0, 4">
            <TextBlock>
                <Run Text="{Binding Name, Mode=OneWay}" />
                <Run Text="{Binding Level, StringFormat=Lv. {0}, Mode=OneWay}" />
                <Run Text="{Binding ExperienceToNextLevel, StringFormat=Next: {0}, Mode=OneWay}" />
            </TextBlock>
        </Border>
        <Border Padding="4">
            <TextBlock>
                <Run Text="{rb:StringResource Main.Overview_Headquarter_Ships, Mode=OneWay}" />:
                <Run Text="{Binding ShipCount, Mode=OneWay}" />/<Run Text="{Binding Admiral.Source.MaxShipCount, Mode=OneWay}" />
                <Run Text="{rb:StringResource Main.Overview_Headquarter_Equipments, Mode=OneWay}" />:
                <Run Text="{Binding EquipmentCount, Mode=OneWay}" />/<Run Text="{Binding Admiral.Source.MaxEquipmentCount, Mode=OneWay}" />
            </TextBlock>
        </Border>
    </StackPanel>
</UserControl>
