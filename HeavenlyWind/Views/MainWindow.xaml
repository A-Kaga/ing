                        </Button>
                    </ListBoxItem>
                    <ListBoxItem>
                        <Button Command="{Binding ShowDevelopmentHistoryCommand}">
                            <TextBlock Text="{rb:StringResource Main.Window_DevelopmentHistory}" />
