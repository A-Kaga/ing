                </ruic:DropDownButton.Header>

                <StackPanel>
                    <StackPanel.Resources>
                        <DataTemplate DataType="{x:Type rvm:ToolViewModel}">
                            <Button Command="{Binding OpenCommand}" CommandParameter="{Binding}">
                                <TextBlock Text="{Binding Name}" />
                            </Button>
                        </DataTemplate>
                    </StackPanel.Resources>

                    <ListBox Style="{StaticResource MenuListBoxStyle}">
                        <ListBoxItem>
                            <Button Content="{rb:StringResource Main.Tool_ExpeditionOverview}" Command="{Binding ShowExpeditionOverviewCommand}" />
                        </ListBoxItem>
                    </ListBox>
                    <ListBox Style="{StaticResource MenuListBoxStyle}" ItemsSource="{Binding ToolPanes}" />
                </StackPanel>
            </ruic:DropDownButton>

            <StackPanel Orientation="Horizontal">
                <rc:AppIcon />
                <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="{rb:StringResource Main.Product_Name}" />

                <rv:UpdateNotification Margin="20, 0, 0, 0" WindowChrome.IsHitTestVisibleInChrome="True" />
            </StackPanel>
        </DockPanel>

        <Control Grid.Row="1">
            <Control.Resources>
                <DataTemplate DataType="{x:Type rvm:GameInformationViewModel}">
                    <rv:GameInformation />
                </DataTemplate>

                <rv:Browser x:Key="Browser" />
                <ContentControl x:Key="Content">
                    <ContentControl.Style>
                        <Style TargetType="{x:Type ContentControl}">
                            <Setter Property="Content" Value="{Binding Content}" />

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsGameStarted}" Value="False">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <TextBlock Text="{rb:StringResource Main.GameInfomation_Waiting}" FontSize="16" HorizontalAlignment="Center" />
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Control.Resources>
            <Control.Style>
                <Style TargetType="{x:Type Control}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Control}">
                                <rv:Browser />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsBrowserAvailable}" Value="False">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Control}">
                                        <ruic:DockableZone DockingController="{StaticResource TabDockingController}" Content="{StaticResource Content}" Grid.Row="1" />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsResizedToFitGame, Source={x:Static rs:BrowserService.Instance}}" Value="True">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Control}">
                                        <ruic:DockableZone DockingController="{StaticResource TabDockingController}" Grid.Row="1">
                                            <ruicd:DockGroup x:Name="DockGroup" Orientation="Horizontal" FirstItem="{StaticResource Browser}" FirstItemLength="Auto" SecondItem="{StaticResource Content}" SecondItemLength="*" />
                                        </ruic:DockableZone>

                                        <ControlTemplate.Triggers>
                                            <DataTrigger Binding="{rb:CurrentDock}" Value="Right">
                                                <Setter TargetName="DockGroup" Property="FirstItem" Value="{StaticResource Content}" />
                                                <Setter TargetName="DockGroup" Property="FirstItemLength" Value="*" />
                                                <Setter TargetName="DockGroup" Property="SecondItem" Value="{StaticResource Browser}" />
                                                <Setter TargetName="DockGroup" Property="SecondItemLength" Value="Auto" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{rb:CurrentDock}" Value="Bottom">
                                                <Setter TargetName="DockGroup" Property="FirstItem" Value="{StaticResource Content}" />
                                                <Setter TargetName="DockGroup" Property="FirstItemLength" Value="*" />
                                                <Setter TargetName="DockGroup" Property="SecondItem" Value="{StaticResource Browser}" />
                                                <Setter TargetName="DockGroup" Property="SecondItemLength" Value="Auto" />
                                            </DataTrigger>

                                            <DataTrigger Binding="{rb:CurrentDock Converter={StaticResource DockToOrientationConverter}}" Value="Vertical">
                                                <Setter TargetName="DockGroup" Property="Orientation" Value="Vertical" />
                                            </DataTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Control.Style>
        </Control>

        <rv:StatusBar x:Name="r_StatusBar" x:FieldModifier="private" Background="{DynamicResource AccentBrushKey}" Grid.Row="2" />

    </Grid>
</ruic:MetroWindow>
