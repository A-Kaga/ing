                </ruic:DropDownButton.Header>

                <ListBox Style="{StaticResource MenuListBoxStyle}">
                    <ListBoxItem>
                        <Button Content="{rb:StringResource Main.Window_ConstructionHistory}" Command="{Binding ShowConstructionHistoryCommand}" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <Button Content="{rb:StringResource Main.Window_DevelopmentHistory}" Command="{Binding ShowDevelopmentHistoryCommand}" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <Button Content="{rb:StringResource Main.Window_SortieHistory}" Command="{Binding ShowSortieHistoryCommand}" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <Button Content="{rb:StringResource Main.Window_ExpeditionHistory}" Command="{Binding ShowExpeditionHistoryCommand}" />
                    </ListBoxItem>
                    <ListBoxItem>
                        <Button Content="{rb:StringResource Main.Window_ScrappingHistory}" Command="{Binding ShowScrappingHistoryCommand}" />
                    </ListBoxItem>
                </ListBox>
            </ruic:DropDownButton>
